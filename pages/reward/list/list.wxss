page {
    background-color: #f0f0f0;
}

.reward-list-container {
    font-size: 28rpx;
    background-color: #fff;
}

.tabs-wrap {
    padding: 0 140rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.tabs-wrap .tab-list {
    display: flex;
    justify-content: space-around;
    color: #b0b0b0;
}

.tabs-wrap .tab-list .tab-name {
    height: 88rpx;
    line-height: 88rpx;
    display: inline-block;
    box-sizing: border-box;
}

.tabs-wrap .tab-list .active {
    color: #444;
    border-bottom: 6rpx solid #444;
}

.types-wrap {
    overflow: hidden;
    height: 88rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.types-wrap .types-content {
    overflow-x: scroll;
}

.types-wrap .type-list {
    white-space: nowrap;
    padding: 0 15rpx;
}

.types-wrap .type-list .type-item {
    display: inline-block;
    min-width: 112rpx;
    line-height: 48rpx;
    font-size: 24rpx;
    color: #444;
    background-color: #f0f0f0;
    border-radius: 24rpx;
    text-align: center;
    padding: 0 10rpx;
    margin: 20rpx 16rpx 40rpx;
    box-sizing: border-box;
}

.types-wrap .type-list .active {
    background-color: #444;
    color: #fff;
    font-weight: 300;
}

.orders-wrap .order-item {
    padding: 24rpx 30rpx;
    display: flex;
    border-bottom: 1rpx solid #f0f0f0;
}

.orders-wrap .order-item .left-text {
    flex-grow: 3;
    max-width: 75%;
}

.orders-wrap .order-item .right-text {
    flex-grow: 1;
    text-align: right;
    line-height: 90rpx;
}

.orders-wrap .order-item .middle {
    vertical-align: middle;
    line-height: 1.2;
    display: inline-block;
}

.orders-wrap .order-item .amount {
    font-weight: 500;
    letter-spacing: -1rpx;
    color: #444444;
    font-size: 32rpx;
}

.orders-wrap .order-item .title {
    display: block;
    margin-bottom: 14rpx;
}

.orders-wrap .order-item .time,
.orders-wrap .order-item .status {
    color: #b0b0b0;
    font-size: 26rpx;
    font-weight: 300;
}

.orders-wrap .order-item .new {
    font-size: 20rpx;
    color: #d0021b;
    border: 1rpx solid #d0021b;
    border-radius: 4rpx;
    padding: 0 8rpx;
    font-weight: normal;
    position: relative;
    left: 10rpx;
    top: -2rpx;
}


