page {
    background-color: #f0f0f0;
}

.me-container {
    font-size: 28rpx;
}

.red {
    color: #d0021b;
}

.me-container .login-hide-btn {
    width: 100%;
    height: 160rpx;
    position: absolute;
    background: none;
    border: none;
    opacity: 0;
}

.me-container .login-hide-btn:after {
    border: none;
}

.header {
    padding: 30rpx;
    background-color: #fff;
}

.header .user-avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
    background: url('https://img10.static.yhbimg.com/headimg/2013/11/28/09/01cae078abe5fe320c88cdf4c220212688.gif?imageView/2/w/100/h/100');
    background-size: 100% 100%;
    display: inline-block;
    vertical-align: middle;
}

.header .user-avatar image {
    width: 100%;
    height: 100%;
}

.header .username {
    line-height: 100rpx;
    display: inline-block;
    vertical-align: middle;
    margin-left: 20rpx;
}

.tap-bar {
    background-color: #fff;
    padding: 0 30rpx;
    line-height: 100rpx;
    display: flex;
    justify-content: space-between;
}

.my-bank-card {
    margin: 20rpx 0;
}

.tap-group .tap-bar:not(:first-child) {
    border-top: 1rpx solid #f0f0f0;
}
