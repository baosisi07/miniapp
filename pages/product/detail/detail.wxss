page {
    height: 100%;
}

.detail-container {
    min-height: 101%;
    padding-bottom: 110rpx;
}

.product-detail {
    padding: 4%;
}

.product-detail .name {
    width: 92%;
    font-size: 32rpx;
    color: #444;
}

.product-detail .price {
    font-size: 44rpx;
    color: #d0021b;
}

.product-detail .price .sales-price-symbol {
    font-size: 26rpx;
}

.product-detail .market-price {
    font-size: 26rpx;
    color: #b0b0b0;
    margin-left: 8rpx;
    text-decoration: line-through;
    display: inline-block;
    vertical-align:middle;
}

.split-line {
    height: 20rpx;
    background-color: #f0f0f0;
}

.rebate-phrase {
    font-size: 24rpx;
    padding: 30rpx;
}

.module-title {
    height: 100rpx;
    line-height: 98rpx;
    text-align: center;
    background-color: #f0f0f0;
}

.module-title .text {
    position: relative;
    font-size: 24rpx;
    color: #b0b0b0;
}

.module-title .text:before {
    position: absolute;
    display: inline-block;
    top: 17rpx;
    left: -120rpx;
    content: '';
    height: 2rpx;
    width: 100rpx;
    background-color: #e0e0e0;
}

.module-title .text:after {
    position: absolute;
    display: inline-block;
    top: 17rpx;
    right: -120rpx;
    content: '';
    height: 2rpx;
    width: 100rpx;
    background-color: #e0e0e0;
}

.bottom-action-wrap {
    width: 100%;
    padding: 16rpx 0;
    background-color: #fff;
    line-height: 88rpx;
    position: fixed;
    bottom: 0;
    display: flex;
    flex-direction: row-reverse;
    border-top: 1rpx solid #f0f0f0;
}

.bottom-action-wrap .login-hide-btn {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    background: none;
    border: none;
    opacity: 0;
}

.bottom-action-wrap .login-hide-btn:after {
    border: none;
}

.bottom-action-wrap .extra-action {
    flex-grow: 1;
    text-align: center;
}

.bottom-action-wrap .option-btn {
    min-width: 35%;
    color: #fff;
    font-size: 30rpx;
    margin-right: 30rpx;
    border-radius: 8rpx;
    font-weight: 300;
    text-align: center;
}

.bottom-action-wrap .view-detail-btn {
    background-color: #444;
}

.bottom-action-wrap .share-detail-btn {
    background-color: #d0021b;
}

.bottom-action-wrap .like-action {
    line-height: 1;
    text-align: center;
    font-size: 20rpx;
    color: #b0b0b0;
    font-weight: 300;
    display: inline-block;
    vertical-align: middle;
    padding: 0 20rpx;
}

.bottom-action-wrap .like-action .iconfont {
    font-size: 48rpx;
    margin-bottom: 8rpx;
}

.bottom-action-wrap .like-action .red {
    color: #d0021b;
}

.bottom-action-wrap .like-action text {
    display: block;
}
.item-collage{
    background:#000;
    color:#fff;
    height:28rpx;
    width:80rpx;
    font-size:18rpx;
    text-align:center;
    line-height:28rpx;
    margin-left:20rpx;
    display:inline-block;
    border-radius:7rpx;
    vertical-align:middle;
}