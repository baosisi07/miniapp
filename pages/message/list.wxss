page {
    background-color: #f0f0f0;
}

.msg-container {
    width: 100%;
    height: 100%;
    font-size: 28rpx;
    color: #444;
}

.msg-item {
    padding: 30rpx;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.msg-item .thumb {
    width: 100%;
    height: 240rpx;
    background-color: #f9f9f9;
    margin-bottom: 30rpx;
}

.msg-item .thumb > image {
    width: 100%;
    height: 100%;
    display: block;
}

.msg-item .title {
    margin-bottom: 20rpx;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.msg-item .time {
    font-size: 24rpx;
    color: #b0b0b0;
}
